<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>

      <p>View our hand-picked campgrounds from all over the world</p>

      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">add new campground</a>
      </p>
    </div>
  </header>
  
  <div class="row" style="display: flex; flex-wrap: wrap">
    <% campgrounds.forEach(function(item) { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= item.image %>" alt="campground">
          <div class="caption">
            <h3><%= item.name %></h3>
          </div>
          <p>
            <a href="/campgrounds/<%= item._id %>" class="btn btn-primary">More info</a>
          </p>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>