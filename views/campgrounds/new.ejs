<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
  <div class="row">
    <div class="jumbotron">
      <div class="container">
        <h1>Create a new campground</h1>
      </div>
    </div>

    <div class="col-md-offset-3 col-md-6">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="newCamp[name]" placeholder="Name a new campground">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="newCamp[image]" placeholder="image a new campground">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="newCamp[description]" placeholder="description a new campground">
        </div>
        <div class="form-group">
          <input class="btn btn-primary btn-lg btn-block" type="submit" value="submit">
        </div>
        <a class="btn" href="/campgrounds">Go back</a>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>