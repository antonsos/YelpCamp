<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
  <div class="row">
    <div class="jumbotron">
      <div class="container">
        <h1>Add a new comment <%= campground.name %></h1>
      </div>
    </div>

    <div class="col-md-offset-3 col-md-6">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="Enter your name">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="comment[text]" cols="30" rows="8"></textarea>
        </div>
        <div class="form-group">
          <input class="btn btn-primary btn-lg btn-block" type="submit" value="submit">
        </div>
        <a class="btn btn-block" href="/campgrounds/<%= campground._id %>">Go back</a>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>